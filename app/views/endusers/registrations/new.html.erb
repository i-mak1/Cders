<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
    <h2 style="text-align: center;">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>


    <div class="row">
      <div class="field col-xs-6">
        <%= f.label :姓 %><br />
        <%= f.text_field :first_name, autofocus: true, placeholder: "姓" %>
      </div>

      <div class="field col-xs-6">
        <%= f.label :名 %><br />
        <%= f.text_field :last_name, autofocus: true, placeholder: "名" %>
      </div>
    </div>
    <div class="row">
      <div class="field col-xs-6">
        <%= f.label :姓（カナ） %><br />
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "セイ" %>
      </div>

      <div class="field col-xs-6">
        <%= f.label :名（カナ） %><br />
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "メイ" %>
      </div>
    </div>
      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postcode, autofocus: true, placeholder: "郵便番号" %>
      </div>

      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, autofocus: true, placeholder: "住所" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
      </div>

      <div class="field">
        <%= f.label :電話番号 %><br />
        <%= f.telephone_field :tel, autofocus: true, placeholder: "電話番号" %>
      </div>
      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, placeholder: "パスワード" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認） %><br />
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

    <%= render "endusers/shared/links" %>
    </div>
  </div>
</div>
