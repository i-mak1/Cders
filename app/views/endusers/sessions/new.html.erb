<div style="background-image:url(<%= asset_path "test5.jpg" %>)" class="back">
    <div class="container">
      <div class="row">
        <div class="col-xs-4 col-xs-offset-4" style="background-color:rgba(255,255,255,0.1); ">
          <h2 style="text-align: center; margin-top: 100px; color: white;"><strong>Log in</strong></h2><br>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <br>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "メールアドレス" %>
          </div>

          <div class="field">
            <br>
            <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: 'btn btn-info col-md-10 col-md-offset-1' %>
          </div>
        <% end %>
        <div style="margin-bottom: 300px;">
          <br>
          <br>
        <%= render "endusers/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
