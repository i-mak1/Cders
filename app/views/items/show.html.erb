<!-- 商品詳細ページ(ユーザー側) -->
<div class="container">
	<div class="row">
		<div class="col-lg-9">
				<div class="col-lg-6">
					<%= attachment_image_tag @item, :item_image, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg" %>
				</div>
				<div class="col-lg-6">
					<div>
							<div id="item-info"><%= @item.item_name %></div>
							<div id="item-info"><%= @item.artist.artist_name %></div>
							<div id="item-info"><%= @item.price %>円</div>
							<div id="item-info"><%= @item.item_status %></div>
							<div id="item-info">レーベル:<%= @item.label.label_name %></div>
							<div id="item-info">ジャンル:<%= @item.genre.genre_name %></div>
					</div>
				</div>
				<div class="col-lg-12" style="text-align: center; font-size: 30px; margin-top: 30px;">収録曲</div>
				<div class="col-lg-12" style="font-size: 15px; border: solid 1px;">
					<p>o1, 曲名１</p>
					<p>02, 曲名１</p>
					<p>03, 曲名１</p>
					<p>04, 曲名１</p>
					<p>05, 曲名１</p>
				</div>
			</div>
		<div class="col-lg-3">
			<%= link_to 'カートに入れる', cart_path,  class: "btn btn-default btn-lg" %>
		</div>
	</div>
</div>

