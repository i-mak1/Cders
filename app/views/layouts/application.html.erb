<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>Cders</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header style="border-bottom: solid;">
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <% if enduser_signed_in? %>
            <%= "ユーザー名：" %>
            <%= link_to edit_enduser_path(current_enduser.id) do %>
              <%= current_enduser.first_name + current_enduser.last_name %>
            <% end %>
          <% elsif admin_signed_in? %>
            <%= "管理者用" %>
          <% end %>
        </div>
        <div class="col-xs-3 col-xs-offset-9">
          <% if admin_signed_in? %>
            <%= form_tag admin_items_path, method: :get do %>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag '検索', :name => nil %>
            <% end %>
          <% else %>
            <%= form_tag root_path, method: :get do %>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag '検索', :name => nil %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="rogo">
          <h1 class="text-center">
            <%= link_to 'Cders', root_path %>
          </h1>
        </div>
      </div>
      <nav class="row">
        <ul class="nav-list" style="list-style-type: none;">
        <% if enduser_signed_in? %>
          <li class="col-xs-2">
            <%= link_to 'My page', enduser_path(current_enduser.id) %>
          </li>
          <li class="col-xs-2">
            <%= link_to "Log out", destroy_enduser_session_path, method: :delete %>
          </li>
          <li class="col-xs-2 col-xs-offset-4 text-right">
            <%= link_to 'お問い合わせ', new_contact_path %>
          </li>
          <li class="col-xs-2 text-right">
            <%= link_to 'カート', "/carts/:id" %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="col-xs-2">
            <%= link_to '商品一覧', admin_items_path %>
          </li>
          <li class="col-xs-2">
            <%= link_to "ユーザー一覧", admin_endusers_path %>
          </li>
          <li class="col-xs-2">
            <%= link_to "お問い合わせ一覧", admin_contacts_path %>
          </li>
          <li class="col-xs-2 text-right">
            <%= link_to "受注一覧", admin_orders_path %>
          </li>
          <li class="col-xs-2 text-right">
            <%= link_to '商品新規追加', new_admin_item_path %>
          </li>
          <li class="col-xs-2 text-right">
            <%= link_to "Log out", destroy_admin_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="col-xs-2">
            <%= link_to "Sign up", new_enduser_registration_path %>
          </li>
          <li class="col-xs-2">
            <%= link_to "Log in", new_enduser_session_path %>
          </li>
        <% end %>
      </ul>
      </nav>
    </div>
  </header>
    <%= yield %>
    <footer style="border-top: solid;">
    <div class="container">
      <p class="text-center">@cders</p>
      <div class="row">
        <div class="col-xs-1 col-xs-offset-11">
          <% if enduser_signed_in? %>
           <%= link_to "退会", "/endusers/#{current_enduser.id}/unsubscribe" %>
          <% end %>
        </div>
      </div>
    </div>
    </footer>
  </body>
</html>
