<!-- 管理者側新規商品追加ページ -->
<div class="container">
	<p id="notice"></p>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2> 商品内容編集</h2>
			<% form_for @item do |f| %>
			<div>
				CDタイトル <%= f.text_field :disk_name %>
			</div>
			<div>

			</div>
			<div>
				アーティスト名 <%= f.text_field :artist_name %>
			</div>
			<div>
				価格(税別) <%= f.text_field :price %>
			</div>
			<div>
				レーベル <%= f.text_field :label_name %>
			</div>
			<div>
				ジャンル <%= f.text_field :genre_name %>
			</div>
			<div>
				収録曲 <%= f.text_area :song_name %>
			</div>
			<div>
				track詳細 <%= f.text_area :track %>
			</div>
			<div>
				在庫数 <%= f.text_field :stock_number %>
			</div>
			<div>
				<%= link_to "商品編集確定", admin_item_path, class: "btn btn-default btn-lg" %>
			</div>

			<% end %>
		</div>
	</div>
</div>
