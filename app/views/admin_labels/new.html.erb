<h1>レーベル新規追加</h1>

<%= form_for(@label, :url => {:controller => :admin_labels, :action => :create}) do |f| %>
<% if @label.errors.any? %>
<div id="error_explanation" style="color: red;">
	<h3> <%= @label.errors.count %>件のエラーが発生しました。</h3>
	<ul>
		<% @label.errors.full_messages.each do |message| %>
		<li> <%= message %> </li>
	<% end %>
	</ul>
</div>
<% end %>
<% end %>

<%= form_for @label, :url => {:action => :create} do |f| %>
<div>
	<%= f.text_field :label_name %>
</div>

<div>
	<%= f.submit '追加' %>
</div>
<% end %>
