<div class="container">
<div class="row">
<div class="col-lg-12">

<div class="container">
<div class="row">


	<div class="col-lg-8">
		<h1 style="margin-bottom: 30px;"><span class="label label-default">注文内容の確認・変更</span></h1>
	</div>

</div>
</div>

<div class="container">
<div class="row">

	<div  style="margin-bottom: 50px;">
		<div class="col-lg-5">
			<h2>送付先</h2>
			<table border>
				<tr>
					<td width="200"> セイ:<%= @order.shipping.shipping_first_name_kana %></td>
					<td width="200"> メイ:<%= @order.shipping.shipping_last_name_kana %></td>
				</tr>
				<tr>
					<td width="200"> 姓:<%= @order.shipping.shipping_first_name %></td>
					<td width="200"> 名:<%= @order.shipping.shipping_last_name %></td>
				</tr>
				<tr>
					<td width="200"> 郵便番号:<%= @order.shipping.shipping_postcode %></td>
				</tr>
				<tr>
					<td width="200">住所 :<%= @order.shipping.shipping_address %><br><br></td>
				</tr>
			</table>
		</div>
		<div class="col-lg-2" style="margin-top: 130px;">
			<%= link_to "変更", orders_new_path, class: "btn btn-default" %>
		</div>
		<div class="col-lg-5" style="border: solid;">
			<h2> 注文内容</h2><br>
		<% sum = 0 %>
			<% @carts.each do |cart| %>
				<% sum = sum + (cart.item.price * BigDecimal("1.08")).round * cart.quantity %>
			<% end %>
					<p style="font-size: 30px;">商品の小計：<%= sum %> 円</p><br>
			<p style="font-size: 30px;">送料     :  500 円</p><br><br>
			<p style="font-size: 30px;">合計     :  <%= sum + 500 %> 円</p>
			<%= link_to "注文を確定する", purchase_path, method: :post, class: "btn btn-default" %>
		</div>
	</div>

</div>
</div>

<div class="container">
<div class="row">

	<div  style="margin-bottom: 50px;">
		<div class="col-lg-5">
			<h2>支払方法</h2>
			<p><%= @order.payment %></p>
		</div>
		<div class="col-lg-2" style="margin-top: 55px;">
			<%= link_to "変更", orders_payment_path, class: "btn btn-default" %>
		</div>
	</div>

</div>
</div>

<div class="container">
<div class="row">

	<div>
		<div class="col-lg-7" style="border: solid;">
			<h2>注文明細</h2>
			<table>

				<thead>
					<tr>
						<th>品名</th>
						<th>値段</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% @carts.each do |cart| %>
						<tr>
							<td><%= cart.item.item_name %></td>
							<td><%= (cart.item.price * BigDecimal("1.08")).round %>円</td>
							<td><%= cart.quantity %>枚</td>
							<td><%= (cart.item.price * BigDecimal("1.08")).round * cart.quantity %>円</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-5" style="margin-top: 55px;">
			<%= link_to "変更", carts_path, class: "btn btn-default" %>
		</div>
	</div>

</div>
</div>







</div>
</div>
</div>