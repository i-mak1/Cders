<!-- ユーザー問合せ画面 -->
<div style="margin: 0 auto; text-align: center;">
<h1>お問い合わせ</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for(@contact, :url => {:controller => :contacts, :action => :create}) do |f| %>
			<div>
				<h2> 名前</h2>
			</div>
			<div>
				<h2> メールアドレス</h2>
			</div>
			<div>
				<h2> 問い合わせ内容</h2>
				<%= f.text_area :contact, size: "20*10", class: "form-control" %>
			</div>
		</div>
	</div>
</div>
<div style="margin: 0 auto; text-align: center;">
<%= f.submit '送信' %>
</div>
<% end %>