<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h1>現在のカート内</h1>
			<table class="table table-borderd">
				<thead>
					<tr>
						<th></th>
						<th>シングル・アルバム名</th>
						<th>単価</th>
						<th>数量</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @carts.each do |cart| %>
						<tr>
							<td><%= attachment_image_tag cart.item, :item_image, fallback:"no_image.jpg", size: "50x50" %>
							<td><%= cart.item.item_name %></td>
							<td><%= (cart.item.price * BigDecimal("1.08")).round %>円（税込）</td>
							<td><%= cart.quantity %>
							<td><%= link_to "編集", cart_path(cart.id) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<%= link_to orders_new_path do %>
<button class="btn btn-default center-block">購入へ進む</button>
<% end %>