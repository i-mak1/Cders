<table class="table table-borderd">
	<thead>
		<tr>
			<th>品名</th>
			<th>単価</th>
			<th>数量</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<td><%= @cart.item.item_name %></td>
		<td><%= (@cart.item.price * BigDecimal("1.08")).round %>円</td>
		<%= form_for @cart do |f| %>
			<td><%= f.select :quantity, @current_stock_number %>個</td>
			<td><%= f.submit '数量変更' %></td>
		<% end %>
		<td><%= link_to "削除", cart_path(@cart),"data-confirm" => "本当に消しますか？", method: :delete %></td>
	</tbody>
</table>